{
  "verbose": true,
  "autoAttachChildProcesses": true,
  "watch": [
    "src",
    ".env"
  ],
  "ext": "js,ts,json",
  "ignore": [
    "src/**/*.spec.ts"
  ],
  "exec": "ts-node --transpile-only ./src/server.ts",

  "events": {
    "restart": "echo 'Restarting APP Instance'",
    "crash": "echo 'APP Instance crashed.'"
  }
}